{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:import/recommended",
        "plugin:react/recommended",
        "plugin:jsx-a11y/recommended"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "react",
        "import",
        "jsx-a11y"
    ],
    "rules": {
        "curly": [
            "error"
        ],
        "react/prop-types": 0,
        "indent": [
            "error",
            3
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        // "quotes": [
        //     2,
        //     "single",
        //     {
        //         "avoidEscape": true
        //     }
        // ],
        "semi": [
            "error",
            "always"
        ],
        "global-require": 0,
        "no-use-before-define": [
            "error",
            {
                "functions": false,
                "classes": false,
                "variables": false
            }
        ],
        "react/react-in-jsx-scope": "off"
    },
    "settings": {
        "import/resolver": {
            "alias": [
                [
                    "~",
                    "./src"
                ],
                [
                    "@components",
                    "./src/components"
                ],
                [
                    "@utils",
                    "./src/utils"
                ]
            ]
        }
    }
}